package graficos;

import java.awt.*;
import java.io.*;

import javax.swing.*;
import javax.imageio.*;
public class IncluyendoImagenes {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		MarcoImagen marco= new MarcoImagen();
	}

}

class MarcoImagen extends JFrame{
	
	public MarcoImagen() {
		
		setVisible(true);
		setTitle("imagenes");
		setBounds(750, 300, 300, 200);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		LaminaImage lamina = new LaminaImage();
		add(lamina);
		
	}
	
}

class LaminaImage extends JPanel{
	
	public void paintComponet(Graphics g) {
		
		super.paintComponent(g);
		File miimagen= new File("spring.png");
		try {
		imagen=ImageIO.read(miimagen);
		}catch(IOException e) {
			System.out.println("no se encontro imagen");
		}
		
		g.drawImage(imagen, 5, 5, null);
		
	}
	
	public Image imagen;
	
	
}